/* Patch for ArxContainers */

#pragma once

#include "k_types.h"

template <typename T> T abs(T value)
{
    return (value < 0) ? -value : value;
}

#define ARX_VECTOR_DEFAULT_SIZE 16 // default: 16
#define ARX_MAP_DEFAULT_SIZE 16    // default: 16
#define ARX_DEQUE_DEFAULT_SIZE 16  // default: 16

#include "ArxContainer.h"